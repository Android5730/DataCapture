<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/item_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/cpt_16dp"
        android:textColor="#333333"
        android:text="通讯人"
        android:layout_margin="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/item_address_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系电话:10086"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/cpt_16dp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="@id/item_address_name"
        app:layout_constraintTop_toBottomOf="@id/item_address_name"/>
    <ImageView
        android:id="@+id/item_iv_dial"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_margin="@dimen/dp_8"
        android:src="@drawable/ic_baseline_local_phone_24"
        app:layout_constraintTop_toTopOf="@id/item_address_name"
        app:layout_constraintBottom_toBottomOf="@id/item_address_number"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>